<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@android:color/black" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notifi_download_tv_low_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/client_push_notification_title"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notifi_download_tv_low_version"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/notifi_download_pb_low_version"
                style="@style/progressbarStyle_Horizontal_red"
                android:layout_width="wrap_content"
                android:layout_height="12dip"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/notifi_download_percent_low_version"
                android:layout_width="45dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0%"
                android:textColor="@color/client_push_notification_title"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>